

{{#each blog}}

<div class="col-md-12 blog-post ">
    <div class="post-title">
        <a href="/post{{ _id }}">
            <h1>{{ title }}</h1>
        </a>
    </div>
    <div class="post-info">
        <span>{{ date }}</span>
    </div>
    <p>{{ subtitle }}</p>
    <a href="/post{{ _id }}" class="button button-style button-anim fa fa-long-arrow-right"><span class="read-next">Читать</span></a>
</div>

{{/each}}