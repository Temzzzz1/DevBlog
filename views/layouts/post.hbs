{{> head }}

<body>

    <!-- Preloader Start -->
    <div class="preloader">
        <div class="rounder"></div>
    </div>
    <!-- Preloader End -->

    <nav>
        <a class="menu__icon mobile"><span></span></a>
        <ul class="menu mobile">
            <li><a href="/" class="menu__item">Blog</a></li>
            <li><a href="/portfolio" class="menu__item">Portfolio</a></li>
        </ul>
    </nav>



    {{>mobilenavbar}}

    <div id="main">
        <div class="container">
            <div class="row">

                {{> navbar}}


                <div class="col-md-9">
                    <div class="col-md-12 page-body">
                        <div class="row">

                            <div class="sub-title sub-title-post">
                                <a href="/" title="Назад в блог">
                                    <h2>Назад</h2>
                                </a>
                                <a href="#comment" class="smoth-scroll"><i class="icon-bubbles"></i></a>
                            </div>

                            <div class="col-md-12 content-page">
                                <div class="col-md-12 blog-post">

                                    {{{ body }}}

                                    {{#if randomPosts}}
                                    <div class="you-may-also-like margin-top-50 margin-bottom-50">
                                        <h3>Читайте также</h3>
                                        <div class="row">


                                            {{#each randomPosts}}
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <a href="/post{{_id}}">
                                                    <p>{{title}}
                                                    </p>
                                                </a>
                                            </div>
                                            {{/each}}



                                        </div>
                                    </div>
                                    {{/if}}

                                    

                                    <script type="text/javascript">
                                        VK.init({ apiId: 7634855, onlyWidgets: true });
                                    </script>

                                    <!-- Put this div tag to the place, where the Comments block will be -->
                                    <div id="vk_comments"></div>
                                    <script type="text/javascript">
                                        VK.Widgets.Comments("vk_comments", { limit: 10, attach: "*" });
                                    </script>

                                </div>
                            </div>


                        </div>
                    </div>

                    <!-- Footer Start -->
                    <div class="col-md-12 page-body margin-top-50 footer">
                        <footer>
                            <ul class="menu-link">
                                <li><a href="/">Blog</a></li>
                            </ul>
                            <p>© 2020 Rusanov. All rights reserved</p>
                        </footer>
                    </div>
                    <!-- Footer End -->



                </div>

            </div>
        </div>
    </div>


    <!-- Back to Top Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-long-arrow-up"></i></a>
    <!-- Back to Top End -->


    <!-- All Javascript Plugins  -->
    <script type="text/javascript" src="js/jquery.min.js"></script>
    <script type="text/javascript" src="js/plugin.js"></script>

    <!-- Main Javascript File  -->
    <script type="text/javascript" src="js/scripts.js"></script>



</body>

</html>