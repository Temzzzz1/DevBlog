{{> head }}

<body>

    <!-- Preloader Start -->
    <div class="preloader">
        <div class="rounder"></div>
    </div>
    <!-- Preloader End -->

    <div id="main">
        <div class="container">
            <div class="row">

                {{> navbar}}

                <div class="col-md-9">
                    <div class="col-md-12 page-body">
                        <div class="row">
                            <div class="col-md-12 content-page">

                                <div class="navbar">
                                    <a href="#">Blog</a>
                                    <a href="#">Contact</a>
                                    <a href="#">Portfolio</a>
                                    <div class="search">
                                        <i class="fa fa-search"></i>
                                        <form class="search-form" method="post">
                                            <input class="search-input" type="text" name="search"
                                                placeholder="найти статью" method="POST" aria-label="Search">
                                        </form>
                                    </div>

                                </div>
                                <hr class="line">

                                {{#if isSearch}}
                                <div class="sub-title">
                                    <h2>Результаты поиска:</h2>
                                </div>
                                {{/if}}

                                {{{ body }}}


                                {{>pagination}}


                            </div>
                        </div>
                    </div>

                    <!-- Footer Start -->
                    <div class="col-md-12 page-body margin-top-50 footer">
                        <footer>
                            <ul class="menu-link">
                                <li><a href="/">Blog</a></li>
                            </ul>
                            <p>© 2020 Rusanov. All rights reserved</p>
                        </footer>
                    </div>
                    <!-- Footer End -->

                </div>
            </div>
        </div>
    </div>


    <!-- Back to Top Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-long-arrow-up"></i></a>
    <!-- Back to Top End -->


    <!-- All Javascript Plugins  -->
    <script type="text/javascript" src="js/jquery.min.js"></script>
    <script type="text/javascript" src="js/plugin.js"></script>

    <!-- Main Javascript File  -->
    <script type="text/javascript" src="js/scripts.js"></script>

</body>

</html>